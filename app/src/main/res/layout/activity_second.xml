                android:layout_width="72dp"
                android:layout_height="70dp"
                android:text="14"
                android:textSize="30sp"
                android:id="@+id/button14" />
        </TableRow>

        //四列目
        <TableRow
            android:gravity="center_vertical"
            android:background="#191970">
            <Button
                android:id="@+id/button15"
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:textSize="30sp"
