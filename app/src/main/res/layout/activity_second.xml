                android:layout_width="72dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="18"
                android:id="@+id/button18" />
            <Button
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="19"
                android:id="@+id/button19" />
        </TableRow>

        //五列目
        <TableRow
            android:gravity="center_vertical"
            android:background="#191970">
            <Button
                android:id="@+id/button20"
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:text="20" />
